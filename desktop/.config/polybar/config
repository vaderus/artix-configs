[colors]
;background = ${xrdb:color0:#222}
background = #005577
background-alt = #222
;foreground = ${xrdb:color7:#222}
foreground = #bbb
foreground-alt = #eee
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/barra]
modules-left = bspwm test xwindow
modules-center = 
modules-right = mpd filesystem gputemp cputemp cpu memory  date time 
width = 100%
height = 22
;offset-x = 1%
;offset-y = 1%
radius = 0
fixed-center = true
line-size = 0
border-size = 0
border-color = #00000000
padding-left = 0
padding-right =0 
module-margin-left = 0
module-margin-right = 0
font-0 = Hack:size=11;3:antialias=true
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
tray-position = right
tray-padding = 2
tray-background = ${colors.background-alt}
wm-restack = bspwm
cursor-click = pointer
cursor-scroll = ns-resize
background = ${colors.background}
foreground = ${colors.foreground}

[module/xwindow]
type = internal/xwindow
label = " %title:0:80:...%"

[module/test]
type = custom/script
format= <label>
exec = echo bspwm
label= " [%output:0:15:...%] "
label-background = ${colors.background-alt}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = " [%{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%] "
label-mounted-background= ${colors.background-alt}
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/bspwm]
type = internal/bspwm
label-focused = " %index% "
label-focused-background = ${colors.background}
label-focused-underline= ${colors.primary}

label-occupied = "⁰%index% "
label-occupied-background = ${colors.background-alt}

label-urgent = " %index% "
label-urgent-background = ${colors.alert}

label-empty = " %index% "
label-empty-foreground = ${colors.foreground-alt}
label-empty-background = ${colors.background-alt}
; label-separator = |

[module/mpd]
type = internal/mpd
format-online = <label-song><icon-prev><icon-stop><toggle><icon-next>
icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 
label-song-maxlen = 25
label-song-ellipsis = true

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " [CPU:"
format-prefix-background = ${colors.background-alt}
label ="%percentage:2%%] "
label-background = ${colors.background-alt}

[module/memory]
type = internal/memory
interval = 2
format-prefix = " [MEM:"
format-prefix-background = ${colors.background-alt}
label = "%percentage_used%%] "
label-background = ${colors.background-alt}
[module/time]
type = internal/date
label = " [%time%] "
interval = 1
time = %H:%M:%S
label-background= ${colors.background-alt}
format-underline = #0a6cf5

[module/date]
type = internal/date
label = " [%date%] "
interval = 60
date = "%d-%m-%Y"
label-background= ${colors.background-alt}
[module/cputemp]
type = internal/temperature
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon3/temp5_input
thermal-zone = 0
warn-temperature = 60
format = <label>
format-warn = <label-warn>
label = " [CPU_temp: %temperature-c%] "
label-background = ${colors.background-alt}
label-warn = " [CPU_temp! %temperature-c%] "
label-warn-background = ${colors.alert}

[module/gputemp]
type = internal/temperature
hwmon-path = /sys/devices/pci0000:00/0000:00:01.0/0000:01:00.0/hwmon/hwmon0/temp1_input
thermal-zone = 0
warn-temperature = 60
format = <label>
format-warn = <label-warn>
label = " [GPU_temp: %temperature-c%] "
label-background = ${colors.background-alt}
label-warn = " [GPU_temp! %temperature-c%] "
label-warn-background = ${colors.alert}

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 5
margin-bottom = 5

